    <section class="room__container" id="All_Posts">
      <p class="section__subheader">All Posts</p>
      <h2 class="section__header">University Gallery</h2>
      <div class="room__grid">
        <% posts.forEach(post => { %>
          <div class="room__card">
            <% if (post.media_url.endsWith('.mp4')) { %>
              <video controls autoplay loop class="post-image">
                <source 
                  src="/<%= post.media_url %>" 
                  type="video/mp4" 
                  class="post-image"
                >
                Your browser does not support the video tag.
              </video>
            <% } else { %>
              <img src="/<%= post.media_url %>" alt="Post image">
            <% } %>
            <div class="room__card__details">
              <div>
                <h4><%= post.title %></h4>
                <p><%= post.description %> <br><span style="color: #f6ac0f; font-size: x-small;"><%= post.location %></span></p>
              </div>
              <h3>
                <span>
                  <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </span>
              </h3>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
